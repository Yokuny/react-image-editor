{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "assists": {
    "actions": {
      "source": {
        "useSortedKeys": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 180
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "options": {
            "functions": ["cn", "clsx", "twMerge", "cva"]
          }
        }
      },
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "info",
        "noConsole": "warn",
        "noExplicitAny": "off",
        "noReactSpecificProps": "off"
      }
    }
  },
  "overrides": [
    {
      "formatter": {
        "enabled": false
      },
      "linter": {
        "enabled": false
      }
    }
  ],
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
